<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:elevation="10dp"
    android:clickable="false"
    card_view:cardCornerRadius="3dp"
    >

    <RelativeLayout
        android:id="@+id/card_linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:clickable="true"
        android:background="@drawable/recycler_selector">

        <TextView
            android:id="@+id/tvingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Step 1: Nutellia Pie"
          />
        <TextView
            android:id="@+id/tvmeasure"
            android:layout_below="@+id/tvingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            tools:text="Step 1: Nutellia Pie" />

        <TextView
            android:id="@+id/tvquantity"
            android:layout_below="@+id/tvmeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            tools:text="Step 1: Nutellie" />

    </RelativeLayout>

</android.support.v7.widget.CardView>